
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>

<div class="bg-secondary h-44" style="-webkit-clip-path: ellipse(50% 60% at 50% 100%); clip-path: ellipse(50% 60% at 50% 100%);"></div>
<div class="flex justify-center items-center px-24 bg-secondary">

  <div x-data="setup()">
		<ul class="flex justify-center items-center my-4">
			<template x-for="(tab, index) in tabs" :key="index">
				<li class="cursor-pointer py-2 px-4 text-gray-500 border-4 border-primary rounded-xl uppercase text-white mx-2" style="font-family: 'Vag';"
					:class="activeTab===index ? 'text-green-500 border-green-500' : ''" @click="activeTab = index"
					x-text="tab"></li>
			</template>
		</ul>

		<div class="w-full text-center mx-auto h-96">
			<div x-show="activeTab===0">Content 1</div>
			<div x-show="activeTab===1"></div>
			<div x-show="activeTab===2">Content 3</div>
		</div>

		</div>
	</div>

</div>

<script>
	function setup() {
    return {
      activeTab: 0,
      tabs: [
          "What's included",
          "How to use",
          "In Action",
      ]
    };
  };
</script>

{% schema %}
{
  "name": "Product - Features",
  "settings": [
    {
      "type": "text",
      "id": "youtube",
      "label": "Youtube URL"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Included Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Quantity"
        }
      ]
    }
  ]
}
{% endschema %}