<section class="relative bg-black">
  {% for block in section.blocks %} {% if block.type == "testimonialrow" %}
    <div class="flex flex-col testimonial-row {% if block.settings.reverse %}md:flex-row-reverse{% else %}md:flex-row{% endif %} w-full 2xl:w-full mx-auto">
      <div class="w-full md:w-1/2 lg:w-1/3 flex items-center bg-black px-10 lg:px-0 order-2 md:order-1">
        <div
          class="{% if block.settings.reverse %}lg:pl-12 pl-0 lg:pr-10 pr-0{% else %}pr-12 lg:pl-12{% endif %} w-full py-10"
        >
          <h1 class="text-white text-4xl font-extrabold leading-none tracking-wider uppercase" style="font-family:'Vag';">
            {{ block.settings.title }}
          </h1>
          <div class="flex mt-2 mb-7">
            {% include 'star' %}
            {% include 'star' %}
            {% include 'star' %}
            {% include 'star' %}
            {% include 'star' %}
          </div>
          <span class="text-white text-base font-light">
            {{ block.settings.desc }}
          </span>
        </div>
      </div>
      <div class="w-full md:w-1/2 lg:w-2/3 order-1 md:order-2">
        <img src="{{ block.settings.image | img_url: '800x' }}"
          srcset="{{ block.settings.image | img_url: '800x' }} 1x,
                  {{ block.settings.image | img_url: '800x', scale: 2 }} 2x,
                  {{ block.settings.image | img_url: '800x', scale: 3 }} 3x"
          loading="lazy" alt="{{ block.settings.title | default: block.settings.title | escape }}"
          class="block w-full h-full object-cover object-top {% if block.settings.reverse %}clip-left {% else %}clip-right {% endif %}">
      </div>
    </div>
    <div class="h-1 bg-white w-full hidden md:block"></div>
  {% endif %} {% endfor %}

  <div class="h-1 bg-white w-full block md:hidden"></div>
</section>

<style>
  @media screen and (min-width: 768px){
    .clip-left{
      clip-path: polygon(0 0, 92% 0, 100% 100%, 0% 100%);
    }
    .clip-right{
      clip-path: polygon(8% 0, 100% 0, 100% 100%, 0% 100%);
    }
  }
</style>
{% schema %}
{
  "name": "events testimonial",
  "settings": [],
  "blocks": [
    {
      "type": "testimonialrow",
      "name": "row",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "reverse",
          "label": "Reverse colunms",
          "default": false
        }
      ]
    }
  ]
}
{% endschema %}


