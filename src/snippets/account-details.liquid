<div class="bg-white border-4 border-secondary rounded w-full mb-5 md:mb-10 px-5" id="details">
  <div class="md:flex justify-between">
    <h1 class="block mt-5 font-black text-lg tracking-widest" style="font-family:'Vag';" href="#">My Details</h1>
    <div class="mt-5">
      <a class="font-black text-sm tracking-widest hover:text-secondary pr-3 border-r-2 border-secondary" style="font-family:'Vag';" href="#">Edit your details</a>
      <a class="font-black text-sm tracking-widest hover:text-secondary pl-3" style="font-family:'Vag';" href="#">Change your password</a>
    </div>
  </div>

  <form class="mt-12" action="/">

    <span class="mb-4 mb:mb-3 flex justify-center items-center flex-col md:flex-row">
      <label class="text-black md:text-primary font-black text-base tracking-widest w-full md:w-1/2 md:text-right mr-0 md:mr-1" style="font-family:'Vag';" for="fullname">Name/Surname:</label>
      <div class="w-full md:w-1/2 ml-1">
        <input type="text" name="" id="fullname" class="rounded-lg border-2 border-primary w-full md:w-44">
      </div>
    </span>

    <span class="mb-4 mb:mb-3 flex justify-center items-center flex-col md:flex-row">
      <label class="text-black md:text-primary font-black text-base tracking-widest w-full md:w-1/2 md:text-right" style="font-family:'Vag';" for="email">Email:</label>
      <div class="w-full md:w-1/2 ml-1">
        <input type="text" name="" id="email" class="rounded-lg border-2 border-primary w-full md:w-44">
      </div>
    </span>

    <span class="mb-4 mb:mb-3 flex justify-center items-center flex-col md:flex-row">
      <label class="text-black md:text-primary font-black text-base tracking-widest w-full md:w-1/2 md:text-right" style="font-family:'Vag';" for="phone">Mobile Phone Number:</label>
      <div class="w-full md:w-1/2 ml-1">
        <input type="text" name="" id="phone" class="rounded-lg border-2 border-primary w-full md:w-44">
      </div>
    </span>

    <span class="mb-4 mb:mb-3 flex justify-center items-center flex-col md:flex-row">
      <label class="text-black md:text-primary font-black text-base tracking-widest w-full md:w-1/2 md:text-right" style="font-family:'Vag';" for="postal">Postal Code:</label>
      <div class="w-full md:w-1/2 ml-1">
        <input type="text" name="" id="postal" class="rounded-lg border-2 border-primary w-full md:w-44">
      </div>
    </span>

    <span class="mb-4 mb:mb-3 flex justify-center items-center flex-col md:flex-row">
      <label class="text-black md:text-primary font-black text-base tracking-widest w-full md:w-1/2 md:text-right" style="font-family:'Vag';" for="country">Country:</label>
      <div class="w-full md:w-1/2 ml-1">
        <select id="country" class="rounded-lg border-2 border-primary w-full md:w-44">
          <option value="UK">United Kingdom</option>
          <option value="UK">United Kingdom</option>
          <option value="UK">United Kingdom</option>
          <option value="UK">United Kingdom</option>
          <option value="UK">United Kingdom</option>
        </select>
      </div>
    </span>
    
    <div class="flex md:justify-center">
      <button class="flex justify-center items-center my-6 rounded-xl bg-white hover:bg-primary border-primary border-4 text-primary hover:text-white px-10 h-14 text-center uppercase" style="font-family:'Vag';">Save</button>
    </div>
  </form>
</div>