<section class="my-24 mx-auto container px-10 md:px-0">
  <h1 class="text-center w-full mb-16 font-black text-3xl md:text-5xl tracking-wider" style="font-family:'Vag';">{{ section.settings.title }}</h1>

  <div class="relative">
    <div class="prev absolute">
      {% include 'arrow-left' %}
    </div>
    <div class="next absolute">
      {% include 'arrow-right' %}
    </div>
    <div class="variable-width mx-auto flex">
      {% for block in section.blocks %}
          <div class="px-6">
            <img src="{{ block.settings.image | img_url: '600x' }}"
              srcset="{{ block.settings.image | img_url: '600x' }} 1x,
                      {{ block.settings.image | img_url: '600x', scale: 2 }} 2x,
                      {{ block.settings.image | img_url: '600x', scale: 3 }} 3x"
              loading="lazy" alt="{{block.settings.alt}}"
              class="h-44 md:h-56 lg:h-80 object-contain rounded-2xl">
          </div>
        {% endfor %}
    </div>
  </div>



  <span class="text-center font-extralight text-lg leading-8 px-12">{{ section.settings.desc }}</span>
  <div class="flex">
    <a class="flex flex-col justify-center items-center mx-auto mt-16 rounded-xl bg-black hover:bg-white border-black border text-white hover:text-black px-6 h-14 text-center uppercase" style="font-family:'Vag';" href="{{section.settings.cta_url}}">{{section.settings.cta}}</a>
  </div>
</section>

{% schema %}
{
  "name": "Events - About",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "CTA"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Link"
    }
  ],
  "blocks":[
  {
    "type": "row",
    "name": "Item",
    "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Image"
    },
    {
      "type": "text",
      "id": "alt",
      "label": "Alt"
    }
  ]
  }
  ]
}
{% endschema %}

<script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
<script type="text/javascript" src="slick/slick.min.js"></script>
<script>
   $(document).ready(function(){
    $('.variable-width').slick({
      dots: false,
      infinite: true,
      speed: 300,
      slidesToShow: 1,
      centerMode: false,
      variableWidth: true,
      prevArrow: $('.prev'),
      nextArrow: $('.next')
    });
  });
</script>