<div class="Footer pt-10 pb-10 flex flex-col">

  <!-- Top Container Menus Footer -->
<div class="footer_container max-width-1600 section-padding-x w-full flex pb-5 pt-5 items-center justify-between gap-6 flex-col | custom-tablet-large:flex-row">
  {% comment %} logo {% endcomment %}
  <div class="mb-14 | custom-tablet-large:mb-0">
    <a href="/">
      <div class="block">
        <img src="{{ section.settings.footer_logo_image | img_url:'600x350' }}" alt="{{section.settings.footer_logo_image.alt}}" class="w-52 h-28 object-contain"/>
      </div>
    </a>
  </div>

<div class="w-full | custom-tablet-large:w-auto">
  {% comment %} newsletter {% endcomment %}
  <div class="w-full | custom-tablet-large:w-auto">
    {% form 'customer' %}
    {{ form.errors | default_errors }}
    {% if form.posted_successfully? %}
      <p style="font-family:'Vag';">Thank you, you are now subscribed to our newsletter!</p>
    {% else %}
    <h1 class="formHeading pb-3 font-extralight text-xl" style="font-family:'Vag';">{{section.settings.footerTitle}}</h1>

    <div class="formHolderFooter flex flex-col gap-4 | custom-tablet-large:flex-row">
      <input type="hidden" name="contact[tags]" value="newsletter">
      <input  type="email"
        name="contact[email]"
        id="Email"
        class="mr-3 h-11 border-custom-pink border-2 rounded-xl pl-5 placeholder-black text-sm font-thin | custom-tablet-large:w-64"
        value="{% if customer.email != blank %}{{ customer.email }}{% endif %}"
        placeholder="Email address"
        autocorrect="off"
        autocapitalize="off"
        style="font-family:'Vag';"
        >
      <button  type="submit" name="commit" id="Subscribe" class="uppercase font-bold text-white bg-custom-pink rounded-xl py-2 w-28 | custom-tablet-large:ml-2">
        Sign up
      </button>
    </div>
    {% endif %}
  {% endform %}
     </div>
</div>

{% comment %} right menu {% endcomment %}
<div class="w-full flex flex-col | custom-tablet-large:w-auto">
  {%- assign footer_linklist = section.settings.footer_linklist -%}
  {% if linklists[footer_linklist].links.size > 0 %}
    <div class="order-3 mt-10 pb-5 border-b border-black | custom-tablet-large:border-none custom-tablet-large:pb-0 custom-tablet-large:mt-0 custom-tablet-large:order-none">
      <div class="footer_tab flex items-center justify-between relative | custom-tablet-large:mb-5 custom-tablet-large:hidden" data-tab="company"> 
        <h2 class="text-lg uppercase font-extralight" style="font-family:'Vag';">Company</h2>
        <div class="icon_container absolute right-0">
          <div class="plus_icon transition duration-200">
            {% render 'icon' with 'plus' %}
          </div>
          <div class="minus_icon transition duration-200 opacity-0 absolute top-1/2 transform -rotate-90">
            {% render 'icon' with 'minus' %}
          </div>
        </div>
      </div>
      <ul class="footer_list hidden flex-wrap flex-col gap-5 pt-5 | custom-tablet-large:pt-0 custom-tablet-large:flex custom-tablet-large:flex-row" data-container="company">
        {% for link in linklists[footer_linklist].links %}
          <li class="pr-5 uppercase font-extralight text-sm | custom-tablet-large:font-extralight custom-tablet-large:text-lg custom-tablet-large:inline" style="font-family:'Vag';"><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

<!-- Social icons -->
<div class="socialIcons w-1/2 flex flex-row items-center justify-between pt-5 ">
  {% if section.settings.button_link_in != blank %}
    {%include 'insta' %}
  {%endif%}
    {% if section.settings.button_link_fb != blank %}
  {%include 'fb' %}
  {%endif%}
  {% if section.settings.button_link_tw != blank %}
    {%include 'twit' %}
  {%endif%}
  {% if section.settings.button_link_yb != blank %}
    {%include 'yb' %}
  {%endif%}
</div>
</div>

</div>
  <!-- Bottom Container Menus Footer -->

<div class="footer_container mt-7 custom-tablet-large:border-t custom-tablet-large:border-custom-pink custom-tablet-large:p-5 custom-tablet-large:pt-10">
  <div class="max-width-1600 section-padding-x w-full mx-auto text-center">
    {%- assign footer_linklist1 = section.settings.footer_linklist1 -%}
    {% if linklists[footer_linklist1].links.size > 0 %}
    <div class="border-b border-black pb-5 | custom-tablet-large:border-none">
      <div class="footer_tab flex items-center justify-between | custom-tablet-large:mb-5 relative | custom-tablet-large:hidden" data-tab="support"> 
        <h2 class="text-lg uppercase font-extralight" style="font-family:'Vag';">Support </h2>
        <div class="icon_container absolute right-0">
          <div class="plus_icon transition duration-200">
            {% render 'icon' with 'plus' %}
          </div>
          <div class="minus_icon transition duration-200 transform -rotate-90 opacity-0 absolute top-1/2">
            {% render 'icon' with 'minus' %}
          </div>
        </div>
      </div>
      <ul class="footer_list flex-col text-left gap-5 hidden pt-5 | justify-end custom-tablet-large:pt-0 custom-tablet-large:flex custom-tablet-large:text-center custom-tablet-large:flex-row" data-container="support">
        {% for link in linklists[footer_linklist1].links %}
