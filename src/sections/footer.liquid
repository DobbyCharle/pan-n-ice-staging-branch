      {% include 'apex' %}
      {% include 'gpay' %}
      {% include 'ms' %}
      {% include 'opay' %}
   {% endif %}
  </div>
</div>
  </div>
</div>
  
</div>

<script>
  $(document).ready(function(){
    let footer_tab = $(".footer_tab");
    let footer_list = $(".footer_list");
    if($(window).width() <= 950){
      footer_tab.each(function(){
        $(this).on("click", function(){
          let footer_tab_data_attr = $(this).data("tab");
          let footer_this = $(this);
          footer_list.each(function(){
            let footer_list_data_attr = $(this).data("container");
            if(footer_tab_data_attr == footer_list_data_attr){
              let footer_list_this = $(this);
              $(this).parents(".footer_container").siblings(".footer_container").find(".footer_list").removeClass("active");

              $(this).parents(".footer_container").siblings(".footer_container").find(".plus_icon").removeClass("rotate");
              $(this).parents(".footer_container").siblings(".footer_container").find(".minus_icon").removeClass("rotate");
              setTimeout(function(){
                footer_list_this.parents(".footer_container").siblings(".footer_container").find(".plus_icon").removeClass("hide");
              },200);
              
              if($(this).hasClass("active")){
                $(this).removeClass("active");
                $(this).siblings(".footer_tab").find(".plus_icon").removeClass("rotate");
                $(this).siblings(".footer_tab").find(".minus_icon").removeClass("rotate");
                setTimeout(function(){
                  footer_list_this.siblings(".footer_tab").find(".plus_icon").removeClass("hide");
                },200);
              } else {
                $(this).addClass("active");
                $(this).siblings(".footer_tab").find(".plus_icon").addClass("rotate");
                $(this).siblings(".footer_tab").find(".minus_icon").addClass("rotate");
                setTimeout(function(){
                  footer_list_this.siblings(".footer_tab").find(".plus_icon").addClass("hide");
                },100);
              }
            }
          });
        });
      });
    }
  });
</script>

<style>
  .footer_list.active{
    display: flex;
  }
  .plus_icon.rotate{
    transform: rotate(180deg);
  }
  .plus_icon.hide{
    opacity: 0;
  }
  .minus_icon{
    
  }
  .minus_icon.rotate{
    transform: rotate(0deg);
    opacity: 1;
  }
</style>

